pipeline {
    agent any

    stages {
        stage('Terraform init') {
            steps {
                script {

                    sh '''
                        #!/bin/bash
                        cd infrastructure
                        echo "Initializing terraform"
                        terraform init
                       
                    '''
                }
            }
        }

        stage ('Terraform apply') {
            steps {
                script {
                    sh '''
                        #!/bin/bash
                        cd infrastructure
                        echo "Provisioning infrastructure"
                        terraform apply -auto-approve
                    '''
                }
            }
        }
    }
}